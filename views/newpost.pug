html
	-var title = 'new Post'
	include includes/header.pug
	
	body
		main
			nav
				.nav-wrapper
					a.brand-logo.center
						ul.left.hide-on-med-and-dow
			
							li
								a(href='/') Home
							li
								a(href='/profile') Profile
							li.active
								a(href='/posts/new') New Entry
							li
								a(href='/search') Search Post
							li
								a(href='/logout') Logout

			h1 Make a Post!

			div.container.center-align
					div.row.text-align
						div.col.l6.offset-l3.s12.post

							form(method='post' action='/posts')

								p Title
								input(type='text', name='inputTitle')

								p Post
								textarea(type='text', name='inputMessage')

								br
								br
								input(type='submit' value='submit')

		include includes/footer.pug

